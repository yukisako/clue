<div class="container">
  
  <h2>パスワード変更</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.label :password, "新しいパスワード" %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "off",size: '30x1' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード(確認）" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off",size: '30x1'  %>
  </div>

  <div class="actions">
    <%= f.submit "パスワードの変更" %>
  </div>
<% end %>

<%#= render "devise/shared/links" %>

</div>
