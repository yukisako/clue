<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
<div class="form-group">
  <div class="col-sm-offset-1">
  <%= link_to "パスワードを紛失した場合", new_password_path(resource_name) %>
  </div>
</div>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
<div class="form-group">
  <div class="col-sm-offset-1">
  <%= link_to "認証メールが届かない場合", new_confirmation_path(resource_name) %>
  </div>
</div>
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
<div class="form-group">
  <div class="col-sm-offset-1">
  <%= link_to "アカウント凍結解除メールが届かない場合", new_unlock_path(resource_name) %>
  </div>
</div>
<% end -%>

<%- if devise_mapping.omniauthable? %>
<hr>
  <%- resource_class.omniauth_providers.each do |provider| %>
<div class="form-group">
  <div class="col-sm-offset-1">
    <%= button_to "#{provider.to_s.titleize}でログイン", omniauth_authorize_path(resource_name, provider), class:"btn btn-primary", method: :get %>
  </div>
</div>
  <% end -%>

<% end -%>
